<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_suarasamind</item>
        <item name="postSplashScreenTheme">@style/Theme.SuarasaMind</item>
    </style>

    <style name="Theme.SuarasaMind" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/calm_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/fresh_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="ShapeAppearance.Suarasa.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="TextAppearance.Suarasa.Headline1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextAppearance.Suarasa.Headline2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextAppearance.Suarasa.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.Suarasa.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Suarasa.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/calm_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Suarasa.Button</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Suarasa.Button.Rounded</item>
    </style>

    <style name="Widget.Suarasa.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textAppearance">@style/TextAppearance.Suarasa.Button</item>
        <item name="strokeColor">@color/text_super_light</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Suarasa.Button.Rounded</item>
    </style>

    <style name="Widget.Suarasa.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/calm_blue</item>
        <item name="hintTextColor">@color/calm_blue</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="startIconTint">@color/calm_blue</item>
    </style>

    <style name="Widget.Suarasa.ContentCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.Suarasa.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Suarasa.BottomNavIndicator</item>
        <item name="android:background">@drawable/bg_bottom_nav</item>
        <item name="elevation">8dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">10dp</item>
    </style>

    <style name="Widget.Suarasa.BottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/card_background</item>
    </style>

    <style name="Widget.Suarasa.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.Suarasa.MoodTracker" parent="">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.Suarasa.RecyclerView" parent="">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>